{
  "compilerOptions": {
    // Ambiente y features modernas
    "lib": ["ESNext"],
    "target": "ESNext",

    // Necesario para backend con Node-like APIs
    "module": "ESNext",

    // Bun recomienda esto:
    "moduleResolution": "bundler",

    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Soporte JSX (no molesta si no us치s React)
    "jsx": "react-jsx",

    "allowJs": true,

    // Reglas estrictas recomendadas
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true,

    // NO marcar errores por variables que no usas (칰til en desarrollo)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    // 游댠 IMPORTANTE: d칩nde est치 tu c칩digo
    "outDir": "dist"
  },

  "include": ["src", "drizzle.config.ts"]
}
